rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // WALLSTREET v2.0 - FIRESTORE SECURITY RULES
    // ============================================

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow update: if isOwner(userId);
      allow create, delete: if false;
    }

    // Games collection (formerly matches)
    match /games/{gameCode} {
      // All authenticated users can read games
      allow read: if isAuthenticated();
      // All writes handled by Cloud Functions
      allow create, update, delete: if false;
    }

    // Players collection (combines portfolio + participant)
    match /players/{playerId} {
      // All authenticated users can read players
      // (portfolios hidden in DRAFT mode via Cloud Functions)
      allow read: if isAuthenticated();
      // All writes handled by Cloud Functions
      allow create, update, delete: if false;
    }

    // Price Snapshots - read only
    match /priceSnapshots/{snapshotId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Results - read only
    match /results/{resultId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Leaderboard - read only
    match /leaderboard/{entryId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Symbol Cache - read only
    match /symbolCache/{symbolId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // System Config - read only
    match /systemConfig/{configId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Audit Log - no client access
    match /auditLog/{logId} {
      allow read, write: if false;
    }

    // Idempotency Cache - no client access
    match /idempotencyCache/{cacheId} {
      allow read, write: if false;
    }

    // Legacy collections (for migration period)
    match /matches/{matchId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /portfolios/{portfolioId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /matchParticipants/{participantId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
  }
}
