rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Users can update their own profile (limited fields)
      allow update: if isOwner(userId);

      // Creation only via Cloud Functions (admin SDK)
      allow create, delete: if false;
    }

    // Matches collection
    match /matches/{matchId} {
      // Authenticated users can read matches
      allow read: if isAuthenticated();

      // Updates only via Cloud Functions
      allow create, update, delete: if false;
    }

    // Portfolios subcollection under matches
    match /matches/{matchId}/portfolios/{portfolioId} {
      // Users can read their own portfolio
      allow read: if isAuthenticated();

      // All writes via Cloud Functions
      allow create, update, delete: if false;
    }

    // Results subcollection under matches
    match /matches/{matchId}/results/{resultId} {
      // Authenticated users can read results
      allow read: if isAuthenticated();

      // All writes via Cloud Functions
      allow write: if false;
    }

    // Portfolios collection (legacy/flat structure)
    match /portfolios/{portfolioId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Results collection (legacy/flat structure)
    match /results/{resultId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Price Snapshots - read only for authenticated users
    match /priceSnapshots/{snapshotId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Leaderboard - read for all authenticated users
    match /leaderboard/{entryId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Match Participants
    match /matchParticipants/{participantId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Symbol Cache - read only
    match /symbolCache/{symbolId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // System Config - read only
    match /systemConfig/{configId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Audit Log - no client access
    match /auditLog/{logId} {
      allow read, write: if false;
    }

    // Idempotency Cache - no client access
    match /idempotencyCache/{cacheId} {
      allow read, write: if false;
    }
  }
}
